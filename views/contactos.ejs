<body>
	<p>
		<b>Curriculum Vitae:</b> <a target="_blank" href="/">Entrar</a>
		<br>
		<b>Página de Ingreso:</b> <a target="_blank" href="/login">Entrar</a>
	</p>
	<table>
		<thead>
			<tr>
				<th id="header-id">ID</th>
				<th>Nombre</th>
				<th>Email</th>
				<th>Comentario</th>
				<th>Fecha</th>
				<th>IP</th>
				<th id="header-pais">País</th>
			</tr>	
		</thead>
		<!-- La idea es meter los registros de la DB aqui -->
		<tbody>
			<% data.forEach(function(row) { %>
			<tr>
				<td><%= row.id  %></td>
				<td><%= row.name %></td>
				<td><%= row.email %></td>
				<td><%= row.comment %></td>
				<td><%= row.date %></td>
				<td><%= row.myIP %></td>
				<td><%= row.pais %></td>
		<!-- Los demas seran agregados pronto -->
			</tr>
			<% }); %>
		</tbody>
	</table>
</body>
</html>